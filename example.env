# Imposter Game - Environment Configuration
# ==========================================
# Copy this file to .env and adjust values for your environment:
#   cp env.example .env
#
# For production, copy to /opt/imposter/.env on your server

# ============================================
# SERVER
# ============================================
PORT=8080
HOST=0.0.0.0
ENV=development  # development | production

# ============================================
# GAME SETTINGS
# ============================================
MIN_PLAYERS=4
MAX_PLAYERS=10
VOTING_DURATION_SECONDS=20
ROLE_REVEAL_SECONDS=5
RECONNECT_GRACE_PERIOD_SECONDS=120

# ============================================
# SECURITY
# ============================================
ROOM_CODE_LENGTH=6

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info  # debug | info | warn | error
LOG_FORMAT=text  # json | text (use json in production)

# ============================================
# OPTIONAL: DATABASE (Future)
# ============================================
# DATABASE_URL=postgres://user:pass@host:5432/imposter
# REDIS_URL=redis://localhost:6379

